function trim(s) {
  while (s.substring(0,1) == ' ') {
    s = s.substring(1,s.length);
  }
  while (s.substring(s.length-1,s.length) == ' ') {
    s = s.substring(0,s.length-1);
  }
  return s;
}

function checkForm(){

var warn='';
var focused='';

if(trim(document.regform.poster_name.value)=='') {
warn='Пожалуйста, введите ваше имя!';
focused=document.regform.poster_name;
}

else if(trim(document.regform.comments.value)=='') {
warn='Пожалуйста, добавьте комментарий!';
focused=document.regform.comments;
}

if(warn=='') document.regform.submit();
else {
alert(warn);
focused.focus();
return;
}

}

